{
	"manifest_version": 2,
	"name": "Счётчик ВКонтакте",
	"description": "Отображает количество непрочитанных сообщений ВКонтакте",
	"developer": {
		"name": "Евгений Шабанов",
		"url": "https://github.com/sheuvi21"
	},
	"homepage_url": "https://github.com/sheuvi21/vk-count-opera",
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"version": "0.4",
	"background": {
		"scripts": ["background.min.js"]
	},
	"permissions": ["tabs", "storage", "notifications", "*://*.vk.com/*", "*://*.userapi.com/*"],
	"browser_action": {
		"default_icon": "button_icon.png"
	},
	"options_page": "options.html"
}